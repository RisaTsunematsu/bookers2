<div>
  <%= flash[:notice] %>
</div>
<div class="container px-5 px-sm-0">
 <div class="row">
   <div class="col-md-3">
   

 <h1>User info</h1>
<div>
  <%= image_tag @book.user.get_profile_image(100,100) %>
  <table class="table">
   <tr><th>name</th> <td><%= @user.name %></td></tr>
   <tr><th>introduction</th> <td><%= @user.introduction %></td></tr>
  </table> 
  <%= link_to edit_user_path(@user.id),class:"btn btn-outline-secondary w-100" do %>
        <i class="fas fa-user-cog"></i>
  <% end %>
  
  
</div>

<h1>New book</h1>
<!-- form_with部分 -->
<%= form_with model: Book.new do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
	
  <h4>Opinion</h4>
  <%= f.text_area :body %>
	
  <%= f.submit 'Create Book' %>
<% end %>
</div>

<div class="col-md-8 offset-md-1"> 
<h1>Book detail</h1>
<table class="table">
  <tr>
    <th><%= link_to user_path(@user.id) do %>
         <%= image_tag @book.user.get_profile_image(100,100) %>
        <% end %>
    </th>
    <td><%= link_to user_path(@user.id) do %>
        <%= @book.title %>
        <% end %>
    </td>
    <td>
        <%= @book.body %>
    </td>
    <td>
        <% if @book.user == current_user %>
        <p class="btn btn-sm btn-success"><%= link_to "Edit",edit_book_path(@book.id) %></p>
        <% end %>
    </td>
    <td>
        <% if @book.user == current_user %>
        <p class="btn btn-sm btn-danger"><%= link_to "Destroy",book_path(@book.id), method: :delete, "data-confirm" => "本当に削除しますか？" %></p>
        <% end %> 
    </td>
  </tr>
</div>
</table>
   <%= link_to user_path(@user.id) do %>
   <%= @book.user.name %>
   <% end %>
 </div>
</div>

